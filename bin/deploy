CMD=deploy
if [ $2  ]
then
  CMD=$2
fi
for D in src/*; do
    if [ -d "${D}" ]; then
      if [ -e "${D}/serverless.yml" ] 
      then
        pushd "${D}" 
        serverless $CMD -s $1
        if [ "${CMD}" == "deploy" ]
        then
          ../../bin/getendpoints $1
        fi
        popd
      fi
    fi
done